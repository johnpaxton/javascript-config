{
	"extends": "@speedingplanet/eslint-config",
	"env": {
		"mocha": true,
		"node": true
	},
	"rules": {
		"array-element-newline": ["warn", "consistent"],
		"newline-per-chained-call": ["warn", { "ignoreChainWithDepth": 2 }],
		"object-curly-newline": "off",
		"quotes": ["warn", "single", { "avoidEscape": true }]
	}
}
